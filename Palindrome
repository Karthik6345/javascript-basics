// -------------------------------------------------------------------------------------
// palindrome without using in-built functions
var a = "noon";
var palin;
let n = a.length - 1;
for (let x = 0; x <= a.length - 1; x++) {
  if (a[x] === a[n]) {
    palin = true;
  } else {
    palin = false;
  }
  n--;
}
console.log(palin, "palin");
// malayalam -- true
// english -- true
// ----------------------------------------------------------
